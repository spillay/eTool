<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="punit">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!-- Annotated entity classes -->
        <class>za.co.egov.cn.Permit</class>
        <class>za.co.egov.cn.Client</class>
        <class>za.co.egov.cn.PermitType</class>
        <class>za.co.egov.cn.PermitStatus</class>
		<properties>
 
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost/egov" />
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.username" value="egov" />
			<property name="hibernate.connection.password" value="12test21" />
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
		</properties>
	</persistence-unit>
</persistence>